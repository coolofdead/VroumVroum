<div class="card" style="width: 20rem; height: 100%;">
  <img src="{{ restaurant.url }}" class="card-img-top" alt="..." style="height:25vh;">
  <div class="card-body">
    <h5 class="card-title">{{ restaurant.nom }}</h5>
    <div style="display:flex;justify-content:space-between;">
      <p class="card-text" style="color: gray;">{{ restaurant.Adresse }}</p>
      {% set iconsCategory = [
        '🧀','🍖','🍗','🥩','🥓','🍔','🍟','🍕','🌭','🥪','🌮','🌯','🥙','🧆','🍳','🥘','🍲','🥣','🥗','🍿','🧈','🧂','🥫','🍱','🍘','🍙','🍚','🍛','🍜','🍝','🍠','🍢','🍣','🍤','🍥','🥮','🍡','🥟','🥠','🥡','🦪','🍦','🍧','🍨','🍩','🍪','🎂','🍰','🧁','🥧','🍫','🍬','🍭','🍮','🍯','🍼','🥛','☕','🍵','🍶','🍾','🍷'
      ] %}
      <p class="card-text">{{ restaurant.Categorie.Categorie }} {{ random(iconsCategory) }}</p>
    </div>
    <div style="display:flex;justify-content:space-between;">
      <p class="card-text">{{ delivery_price }}€ de livraison</p>
      <a href="restaurant-detail/{{ restaurant.id }}" class="btn btn-outline-primary">Visiter</a>
    </div>
  </div>
</div>