{% extends 'base.html.twig' %}
{% block title %}Payement
{% endblock %}
{% block stylesheets %}
	{{ parent() }}
	<link rel="stylesheet" href="{{ asset('css/BankCard.css') }}">
	<link href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
{% endblock %}

{% block content %}

	{{ parent() }}

	<div class="container list-group list-group-horizontal" style="display: flex;justify-content: center;max-width: 1200px;">

		<div class="col-xs-12 col-md-4" style="max-width:100% !important;width:unset;">

			<div class="panel panel-default credit-card-box">
				<div class="panel-heading display-table">
					<div class="row display-tr">
						<h3 class="panel-title display-td">Payment Details</h3>
						<div class="display-td">
							<img class="img-responsive pull-right" src="http://i76.imgup.net/accepted_c22e0.png">
						</div>
					</div>
				</div>
				<div class="panel-body">

					<form role="form" id="payment-form" method="POST" action="/addBalance">

						<div class="row">
							<div class="col-xs-12">
								<div class="form-group">
									<label for="cardNumber">CARD NUMBER</label>
									<div class="input-group">
										<input type="tel" class="form-control" name="cardNumber" placeholder="Valid Card Number" autocomplete="cc-number" required autofocus/>
										<span class="input-group-addon">
											<i class="fa fa-credit-card"></i>
										</span>
									</div>
								</div>
							</div>
						</div>
						<div class="row">
							<div class="col-xs-7 col-md-7">
								<div class="form-group">
									<label for="cardExpiry">
										<span class="hidden-xs">EXPIRATION</span>
										<span class="visible-xs-inline">EXP</span>
										DATE</label>
									<input type="tel" class="form-control" name="cardExpiry" placeholder="MM / YY" autocomplete="cc-exp" required/>
								</div>
							</div>
							<div class="col-xs-5 col-md-5 pull-right">
								<div class="form-group">
									<label for="cardCVC">CV CODE</label>
									<input type="tel" class="form-control" name="cardCVC" placeholder="CVC" autocomplete="cc-csc" required/>
								</div>
							</div>
						</div>
						{% if items is defined %}
							<div class="row">
								<div class="col-xs-12">
									<div class="form-group">
										<label for="couponCode">COUPON CODE</label>
										<input type="text" class="form-control" name="couponCode"/>
									</div>
								</div>
							</div>
						{% endif %}
						<div class="row">
							<div class="col-xs-12">
								<div class="form-group">
									<label for="couponCode">SOMME</label>
									<input type="number" class="form-control" name="couponCode" min="0"/>
								</div>
							</div>
						</div>
						<div class="row">
							<div class="col-xs-12">
								<button class="subscribe btn btn-success btn-lg btn-block" type="submit">Payer</button>
							</div>
						</div>
						<div class="row" style="display:none;">
							<div class="col-xs-12">
								<p class="payment-errors"></p>
							</div>
						</div>

					</form>

				</div>
			</div>
		</div>
	</div>
{% endblock %}
